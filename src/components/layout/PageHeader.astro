---
import { Badge } from "../ui/badge";
import Container from "./Container.astro";

interface Props {
  badgeTitle: string;
  title: string;
  description: string;
}

const { badgeTitle, title, description } = Astro.props;
---

<Container class="text-center mt-16 mb-12">
  <Badge variant="secondary" className="mb-4"> {badgeTitle} </Badge>
  <h2 class="text-4xl sm:text-5xl font-bold tracking-tight">{title}</h2>
  <p class="text-muted-foreground mt-2 sm:mt-4 text-lg">
    {description}
  </p>
</Container>
