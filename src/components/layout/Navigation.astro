---
import ThemeToggle from "../ThemeToggle.astro";
import { NavigationSheet } from "./NavigationSheet";

const pathname = new URL(Astro.request.url)?.pathname;
export const links = [
  { href: "/about/", label: "About" },
  { href: "/projects/", label: "Projects" },
  { href: "/experience/", label: "Experience" },
  { href: "/contact/", label: "Contact" },
];
---

<ul class="main-navigation items-center gap-8 hidden md:flex mr-8" role="list">
  {
    links.map(({ href, label }) => (
      <li class="hover:text-blue-400">
        <a class={pathname.includes(href) ? "text-blue-400 hover:cursor-pointer" : "hover:cursor-pointer"} href={href}>
          {label}
        </a>
      </li>
    ))
  }
</ul>
<ThemeToggle />
<div class="ml-2 md:hidden">
  <NavigationSheet client:only />
</div>
